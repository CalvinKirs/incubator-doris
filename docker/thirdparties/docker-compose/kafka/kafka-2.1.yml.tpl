version: "2.1"

services:
  zookeeper:
    image: zookeeper:3.6.3
    restart: always
    ports:
      - "2181:2181"

  kafka:
    image: confluentinc/cp-kafka:5.5.3
    restart: always
    ports:
      - "9092:9092"
    environment:
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://localhost:9092
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
    depends_on:
      - zookeeper