name: CI

on:
  pull_request:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      # Get changed files
      - name: Get changed files
        run: |
          git fetch origin main
          git diff --name-only origin/main ${{ github.event.pull_request.head.sha }} > changed_files.txt
        id: get_changed_files

      # Use changed files in subsequent steps
      - name: Build and test
        run: |
          echo "Building and testing on branch ${{ github.event.pull_request.head.ref }}"
          cat ${{ steps.get_changed_files.outputs.stdout }}
